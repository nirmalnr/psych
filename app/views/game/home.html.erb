<div style= 'padding:10px;'>
    <%= form_with(url: "/game/create_room", method: "post", local: true) do %>
        <%= submit_tag("New game", class: "btn btn-secondary", style: "width: 180px;")%>
    <% end %>
</div>


<%= form_with(url: "/game/join_room", method: "post", local: true) do %>
    <div class="input-group mb-3" style= 'padding:10px;width: 200px;' >
        <%= text_field_tag(:room_name, "", class: "form-control") %>
        <div class="input-group-append">
        <%= submit_tag("Join game", class: "btn btn-secondary")%>
        </div>
    </div>
<% end %>

<%= notice %>